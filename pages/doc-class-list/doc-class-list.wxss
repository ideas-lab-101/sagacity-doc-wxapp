@import '../article/article.wxss';
.top-image {
  width: 100%;
  height: 200rpx;
}

.item-main {
  padding: 20rpx;
  display: flex;
  align-items: stretch;
}

.item-l {
  width: 180rpx;
}

.item-l ._book{
    width: 180rpx;
    height: 240rpx;
    background-color: rgba(0,0,0, 0.1);
    border-radius: 5px;
    box-shadow: 0 15px 20px -15px rgba(0, 0, 0, 0.3), 0 3px 5px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
}
.item-l ._book::after{
    width: 4px;
    content: "";
    position: absolute;
    left: 1px;
    top: 0px;
    height: 100%;
    z-index: 10;
    background-image: linear-gradient(
            to right,
            rgba(255,255,255, 0) 0%,
            rgba(255,255,255, 0.3) 50%,
            rgba(255,255,255, 0) 100%)
}
.item-l ._book::before{
    width: 12%;
    content: "";
    position: absolute;
    left: 0px;
    top: 0px;
    height: 100%;
    z-index: 6;
    background-image: linear-gradient(
            to right,
            rgba(0,0,0, 0.1) 0%,
            rgba(0,0,0, 0.15) 50%,
            rgba(0,0,0, 0) 100%)
}

.item-l ._book image{
  width: 100%;
  height: 100%;
}

.item-r {
  width: 550rpx;
  padding-left: 30rpx;
  position: relative;
}

.list-title {
  font-size: 40rxp;
  color: #333;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list-desc {
  font-size: 24rpx;
  line-height: 1.5;
  display: block;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.list-info {
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  width: 500rpx;
  left: 30rpx;
  display: flex;
  justify-content: space-between;
}
