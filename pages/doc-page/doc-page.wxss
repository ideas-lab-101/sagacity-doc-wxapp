/**基础风格样式**/
@import '/towxml/style/main.wxss';

/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/

/**主题配色（浅色样式）**/
@import '/towxml/style/theme/light.wxss';
/**主题配色（深色样式）**/
@import '/towxml/style/theme/dark.wxss';

@import '../doc-menu/doc-menu.wxss';
.pbg{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}
.page-main {
  margin: 0;
  padding: 0 0 100rpx 0;
  position: relative;
  z-index: 2;
}

.code {
  background: #333;
  border: 1px solid #333;
  padding: 2px 5px;
  color: #fff;
}

.set-read-type {
  position: fixed;
  z-index: 99;
  bottom: 20rpx;
  right: 120rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
}

.set-read-type-icon {
  width: 40rpx;
  height: 40rpx;
}

.footer-bar {
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  z-index: 9;
}

.footer-bar .more {
  width: 100rpx;
  height: 100rpx;
}

.menu-box {
  flex-grow: 3;
  display: flex;
}

button.bar-item::after,button.go-btn::after{
    border: none;
}

.menu-box .go-btn {
  flex-shrink: 0;
  flex-grow: 1;
  padding-left: 12rpx;
  padding-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.go-btn.clicked {
  background-color: #000;
}

.go-btn .go-icon {
  color: #fff;
  font-size: 52rpx;
}

.bar-item {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
  background: transparent;
  line-height: 0;
}

.bar-item.clicked {
  background-color: #000;
}

.bar-item .c-iconfont {
  font-size: 40rpx;
  line-height: 50rpx;
}

.bar-item text {
  color: #fff;
  font-size: 22rpx;
  line-height: 30rpx;
  display: block;
}

/* 字体设置区 */
.set-font {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 100rpx;
  padding: 25rpx 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 998;
}

.set-f-l {
  width: 100rpx;
  text-align: center;
}

.set-f-body {
  flex-shrink: 0;
  flex-grow: 1;
}

.set-f-r {
  width: 100rpx;
  text-align: center;
}

.set-f-l .c-iconfont, .set-f-r .c-iconfont {
  color: #fff;
  font-size: 32rpx;
}

.page-menu {
  position: fixed;
  width: 562rpx;
  background: #fff;
  top: 0;
  bottom: 0rpx;
  right: 0;
  z-index: 999;
  box-shadow: -100rpx 0 160rpx rgba(0, 0, 0, 0.5);
}

.select {
  background: #ddd;
}
.dark {
  
  background-color: #000;
}
.dark .menu-title{
color: #ddd;
}
.dark .select .menu-title{
  color: #000000;
}

/* 背景音乐设置区 */
.back-music {
  position: fixed;
  bottom: 120rpx;
  left: 20rpx;
  width: 220rpx;
  height: 75rpx;
  background: rgba(255, 255, 255, 0.6);
  border: solid 1px #000;
  border-radius: 25px;
  box-shadow:0px 0px 8px #2f2f2f;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 997;
}

.set-m-l {
  text-align:left;
  width: 75rpx;
}
.cover-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  position: absolute;
  margin-left: 3rpx;
  margin-top: -35rpx;
}

@-webkit-keyframes rotation{
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}
}

.rotate{
  -webkit-transform: rotate(360deg);
  animation: rotation 8s linear infinite;
  -moz-animation: rotation 8s linear infinite;
  -webkit-animation: rotation 8s linear infinite;
  -o-animation: rotation 8s linear infinite;
}

.set-m-body {
  flex-shrink: 0;
  flex-grow: 1;
  text-align: center;
}
.set-m-body .title {
  color: #000;
  font-size: 26rpx;
}

.set-m-r {
  flex-shrink: 0;
  flex-grow: 1;
  display: flex;
}

.set-m-r .m-controll.clicked {
  background: #f2f2f2;
}

.set-m-r .c-iconfont {
  color: #000;
  font-size: 44rpx;
  padding: 0 10rpx;
}

/* button控件样式 */
.wux-speed-dial--bottom-right {
    right: 0;
    bottom: 0;
} 

.wux-speed-dial__action{
    background-color: transparent;
    box-shadow: none;
}

.wux-speed-dial__button{
  background: rgba(0, 0, 0, 0.8)
}

.wux-speed-dial__button image{
  margin: 0 !important;
}