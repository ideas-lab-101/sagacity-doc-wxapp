@import '../article/article.wxss';
.top-image {
  width: 100%;
  height: 200rpx;
}

.class-main {
  background: #fff;
  padding: 20rpx 20rpx 0 20rpx;
}

.class-title {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.class-list {
  margin-top: 20rpx;
}

.class-list-item {
  font-size: 24rpx;
  padding: 15rpx 20rpx;
  background: #f7f7f7;
  margin: 0 20rpx 20rpx 0;
  display: inline-block;
  border-radius: 10rpx;
  color: #333;
}

.list {
  margin-top: 5rpx;
}
.item-main {
  padding: 20rpx;
  display: flex;
  align-items: stretch;
}

.item-l {
  width: 180rpx;
}

.item-r {
  width: 550rpx;
  padding-left: 30rpx;
  position: relative;
}

.list-image {
  width: 180rpx;
  height: 240rpx;
  border-radius: 10rpx;
}

.list-title {
  font-size: 40rxp;
  color: #333;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list-desc {
  font-size: 24rpx;
  line-height: 1.5;
  display: block;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.list-info {
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  width: 500rpx;
  left: 30rpx;
  display: flex;
  justify-content: space-between;
}