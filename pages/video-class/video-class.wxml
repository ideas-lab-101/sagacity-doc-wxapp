<view class="">
  <view class="search-view" wx:if="{{true}}" bindtap="go_search">
    <text class="search-text">搜索视频</text>
    <icon class="search-icon" type="search" size="15" />
  </view>
  <view class="class-main">
    <view class="class-list view-bg">
      <view class="class-son">
        <view class="class-son-item" wx:for="{{data}}" wx:key="{{item}}" hover-class="view-hover-class" data-id="{{item.id}}" bindtap="go_class_list">
          <image class="class-icon" src="{{item.icon}}"></image>
          <view class="class-son-title">
            <text>{{item.title}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>