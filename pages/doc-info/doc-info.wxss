@import '../wenda/wenda.wxss';

.info-top {
  position: relative;
  padding: 32rpx 32rpx 0 32rpx;
  background: #fff;
  background: -webkit-linear-gradient(bottom, #fff, rgba(255, 255, 255, 0) 108px) no-repeat center bottom;
  background: linear-gradient(to top, #fff, rgba(255, 255, 255, 0) 8rem) no-repeat center bottom;
}

.top-main {
  display: flex;
}

.main-l.book{
    width: 180rpx;
    height: 240rpx;
    background-color: rgba(0,0,0, 0.1);
    border-radius: 5px;
    box-shadow: 0 15px 20px -15px rgba(0, 0, 0, 0.3), 0 3px 5px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
}
.main-l.book::after{
    width: 4px;
    content: "";
    position: absolute;
    left: 1px;
    top: 0px;
    height: 100%;
    z-index: 10;
    background-image: linear-gradient(
            to right,
            rgba(255,255,255, 0) 0%,
            rgba(255,255,255, 0.3) 50%,
            rgba(255,255,255, 0) 100%)
}
.main-l.book::before{
    width: 12%;
    content: "";
    position: absolute;
    left: 0px;
    top: 0px;
    height: 100%;
    z-index: 6;
    background-image: linear-gradient(
            to right,
            rgba(0,0,0, 0.1) 0%,
            rgba(0,0,0, 0.15) 50%,
            rgba(0,0,0, 0) 100%)
}

.main-l.book image{
  width: 100%;
  height: 100%;
}

.main-r {
  display: flex;
  flex-direction: column;
  margin-left: 8px;
}

.info-title {
    font-size: 40rpx;
    min-height: 80rpx;
    margin-bottom: 20rpx;
    font-weight: bold;
    color: #33373d;
    display: block;
}

.info-username {
  font-size: 24rpx;
  line-height: 1.8;
}

.info-class {
  font-size: 24rpx;
  line-height: 1.8;
}

.info-from {
  font-size: 24rpx;
  line-height: 1.8;
}

.top-btn-group {
  padding: 40rpx 0 30rpx 0;
  display: flex;
  justify-content: space-around;
}

.func-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 9pt;
  width: 120rpx;
  padding: 10rpx 0rpx;
  background: none;
  line-height: 2.3em;
  border: none !important;
}

.func-item::after, .func-item::before {
