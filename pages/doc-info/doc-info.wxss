  font-size: 20rxp;
  color: #333;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list-desc {
  font-size: 18rpx;
  line-height: 1.4;
  display: block;
  margin-top: 5rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.list-info {
  font-size: 16rpx;
  position: absolute;
  bottom: 0;
  width: 440rpx;
  left: 15rpx;
  display: flex;
  justify-content: space-between;
}

