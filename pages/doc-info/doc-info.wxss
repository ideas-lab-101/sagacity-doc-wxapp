.list {
  margin:0 22rpx;
}

.item-main {
  padding: 10rpx;
  padding-bottom: 15rpx;
  display: flex;
  align-items: stretch;
}

.item-l {
  width: 240rpx;
}

.item-r {
  width: 480rpx;
  padding-left: 15rpx;
  padding-right: 5rpx;
  position: relative;
}

.list-image {
  width: 235rpx;
  height: 130rpx;
  border-radius: 10rpx;
