@import '../wenda/wenda.wxss';

.top-video {
    display: flex;
    align-items: flex-end;
    width: 100%;
    height: 230px;
    margin-top: 1px;
    margin-bottom: 1px;
}

.event-catcher {
    position: relative;
    width: 100%;
    height: 100%;
}

.controls {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    padding: 10px;
    background-color: rgba(0, 0, 0, .6);
}

.controls .img {
    width: 28px;
    height: 28px;
}

.info-top {
    position: relative;
    padding: 32rpx 32rpx 0 32rpx;
    background: #fff;
    background: -webkit-linear-gradient(bottom, #fff, rgba(255, 255, 255, 0) 108px) no-repeat center bottom;
    background: linear-gradient(to top, #fff, rgba(255, 255, 255, 0) 8rem) no-repeat center bottom;
}

.info-main {
    display: flex;
    flex-direction: column;
}

.info-title {
    font-size: 40rpx;
    height: 60rpx;
    margin-bottom: 5rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-weight: bold;
    color: #33373d;
    display: block;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.info-source {
    font-size: 24rpx;
    line-height: 1.8;
}

.top-btn-group {
    padding: 40rpx 0 30rpx 0;
    display: flex;
    justify-content: space-between;
}

.top-btn-group .btn {
    margin: 0;
    width: 220rpx;
    border-radius: 0;
    line-height: 2.6;
}

.top-btn-group .btn::after {
    border-radius: 0;
}

.desc-main .border-b {
    margin-left: 32rpx;
}

.info-desc {
    font-size: 24rpx;
    line-height: 1.6;
    padding: 32rpx;
    color: #666;
    background: #fff;
}

.top-menu {
    display: flex;
    justify-content: space-between;
    line-height: 90rpx;
}

.menu-name {
    color: #666;
    font-size: 36rpx;
    font-weight: bold;
}

.menu-info {
    font-size: 24rpx;
    color: #999;
    margin-right: 20rpx;
}

.zan-main {
    background: #fff;
    margin-top: 10rpx;
}

.zan-main .border-b {
    margin-left: 32rpx;
}

.zan-top {
    display: flex;
    padding: 20rpx 32rpx;
    align-items: center;
    justify-content: space-between;
}

.zan-body {
    display: flex;
}

.zan-empty {
    text-align: center;
    line-height: 90rpx;
    color: #999;
}

.no_data {
    background: #fff;
}

.no_data_text {
    background: none;
    color: #999;
}

.zan-user-list {
    display: flex;
    margin: 0 22rpx;
}

.zan-user-list .user-info {
    width: 80rpx;
    height: 80rpx;
    padding: 20rpx 10rpx;
}

.zan-user-list .user-info .user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.item-main {
  padding: 10rpx;
  display: flex;
  align-items: stretch;
}

.item-l {
  width: 240rpx;
}

.item-r {
  width: 480rpx;
  padding-left: 15rpx;
  position: relative;
}

.list-image {
  width: 235rpx;
  height: 130rpx;
  border-radius: 10rpx;
}

.list-title {
  font-size: 20rxp;
  color: #333;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list-desc {
  font-size: 18rpx;
  line-height: 1.3;
  display: block;
  margin-top: 5rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.list-info {
  font-size: 16rpx;
  position: absolute;
  bottom: 0;
  width: 420rpx;
  left: 30rpx;
  display: flex;
  justify-content: space-between;
}
