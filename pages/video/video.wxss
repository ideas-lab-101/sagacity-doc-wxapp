@import '../article/article.wxss';
.top-image {
  width: 100%;
  height: 200rpx;
}

.class-main {
  background: #fff;
  padding: 3rpx 5rpx 3rpx 5rpx;
}

.class-title {
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  padding: 0 15rpx;
  font-size: 30rpx;
  color: #666;
  display: flex;
  margin-bottom: 10rpx;
  justify-content: space-between;
}
.class-son{
  display: flex;
  flex-wrap: wrap;
}
.class-son-item{
  width: 250rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  font-size: 24rpx;
  padding: 20rpx 0 20rpx 0;
}
.class-icon{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
.class-son-title{
  line-height:1.5;
  margin-top: 10rpx;
  color: #333333;
}

.class-list {
  margin: 20rpx 15rpx 0 15rpx;
}

.class-list-item {
  font-size: 24rpx;
  padding: 15rpx 20rpx;
  background: #f7f7f7;
  margin: 0 20rpx 20rpx 0;
  display: inline-block;
  border-radius: 10rpx;
  color: #333;
}

.list {
  margin-top: 5rpx;
}
.item-main {
  padding: 20rpx;
  display: flex;
  align-items: stretch;
}

.item-l {
  width: 180rpx;
}

.item-r {
  width: 550rpx;
  padding-left: 30rpx;
  position: relative;
}

.list-image {
  width: 180rpx;
  height: 240rpx;
  border-radius: 10rpx;
}

.list-title {
  font-size: 40rxp;
  color: #333;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.list-desc {
  font-size: 24rpx;
  line-height: 1.5;
  display: block;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.list-info {
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  width: 500rpx;
  left: 30rpx;
  display: flex;
  justify-content: space-between;
}

.no_more{
  line-height: 90rpx;
  text-align: center;
  background: #f7f7f7;
  font-size: 24rpx;
  color: #999999;
}